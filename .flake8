[flake8]
max-line-length = 127
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .eggs,
    *.egg,
    build,
    dist,
    .pytest_cache
max-complexity = 10
ignore =
    E203,  # whitespace before ':'
    E266,  # too many leading '#' for block comment
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
    F401   # imported but unused (handled by other tools)
per-file-ignores =
    __init__.py:F401
    tests/*:F401

